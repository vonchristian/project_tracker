<div class="container">
  <div class="card">
    <div class="header">
      <h4 class="title"> New Stock Details </h4>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-5">
          <%=simple_form_for [@inventory, @stock], url: :inventory_stocks do |f| %>
            <%=f.error_notification %>
            <%=f.input :quantity %>
            <%=f.input :unit_price, label: "Price" %>
            <div class="modal-footer">
              <%=f.submit "Save Stock", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-5">
        </div>
      </div>
    </div>
  </div>
</div>
