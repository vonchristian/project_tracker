<div class="container">
  <div class="card">
    <div class="header">
      <h4 class="title"> Contractor Details </h4>
    </div>
    <div class="content">
      <%=simple_form_for @contractor do |f| %>
        <%=f.error_notification %>
        <%=f.input :first_name %>
        <%=f.input :last_name %>
        <%=f.input :company %>
        <%=f.input :position %>
        <div class="modal-footer">
          <%=f.submit "Save Contractor" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
