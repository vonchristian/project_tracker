<div class="container">
  <div class="card">
    <div class="header">
      <h4 class="title"> Equipment Details </h4>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-5">
          <%=simple_form_for @equipment do |f| %>
            <%=f.error_notification %>
            <%=f.input :make_and_model %>
            <%=f.input :plate_number %>
            <%=f.input :acquisition_cost %>
            <%=f.input :acquisition_date, as: :string, input_html: { class: "datepicker"} %>
            <div class="modal-footer">
              <%=f.submit "Save Equipment", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-5">
        </div>
      </div>
    </div>
  </div>
</div>
